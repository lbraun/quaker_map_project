<p id="notice"><%= notice %></p>

<h1>Location Records</h1>

<table>
  <thead>
    <tr>
      <th>Location type</th>
      <th>Location</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_records.each do |location_record| %>
      <tr>
        <td><%= location_record.location_type %></td>
        <td><%= location_record.location_id %></td>
        <td><%= location_record.start_date %></td>
        <td><%= location_record.end_date %></td>
        <td><%= location_record.latitude %></td>
        <td><%= location_record.longitude %></td>
        <td><%= location_record.address %></td>
        <td><%= link_to 'Show', location_record %></td>
        <td><%= link_to 'Edit', edit_location_record_path(location_record) %></td>
        <td><%= link_to 'Destroy', location_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

